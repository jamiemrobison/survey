@views::view('shared/header.cshtml')

                <!-- Breadcrumbs, Title, Description -->
                <div id="page-head">
                    <h1><em>interesting news and events</em>Blog</h1>
                    <ul id="breadcrumbs">
                        <li><a href="@mvc::url('home/index')">Home</a></li>
                        <li>Blog</li>
                    </ul>
                </div>
                
                <!-- Posts Container Start -->
                <div id="cat-container">

					@foreach($posts as &$tPost) {
					@{
						$tTimestamp = time::convert($tPost['createdate'], 'Y-m-d H:i:s');
					}
                    <div class="post format-standard">
                    	<div class="p-meta">
                        	<div class="p-type"></div>
	                        <div class="date"><strong>@date('d', $tTimestamp)</strong>@statics::$months[date('m', $tTimestamp)]</div>
                        </div>
                        <h2 class="p-title"><a href="@mvc::url('blog/post/' . $tPost['postid'])">@$tPost['title']</a></h2>
                        <div class="post-content">
                            <p>
                            	@$tPost['content']
                            </p>
                        </div>
                    </div>
					}

                </div>
                <!-- Posts Container End -->
                
                <!-- Pagination -->
				<ul id="pagination" class="margintop10px">
					@html::pager(array(
						'total' => $pagerTotal,
						'pagesize' => blog::PAGE_SIZE,
						'current' => $pagerCurrent,
						'link' => '<li><a href="' . mvc::url('blog/index/{page}') . '" class="pagerlink">{pagetext}</a></li>',
						'activelink' => '<li class="act"><a href="' . mvc::url('blog/index/{page}') . '" class="pagerlink">{pagetext}</a></li>',
						'firstlast' => false
					))
				</ul>
    
@views::view('shared/footer.cshtml')