@{
    use App\Includes\Statics;
	use Scabbia\Extensions\Views\Views;
	use Scabbia\Extensions\Session\Session;
	use Scabbia\Extensions\Http\Http;
    use Scabbia\Request;
}
@Views::viewFile('{app}views/shared/header.cshtml')
                
                <!-- Breadcrumbs, Page Title -->
                <div id="page-head">
                    <h1><em>jump start to create surveys</em>Registration</h1>
                    <ul id="breadcrumbs">
                        <li><a href="@Http::url('home/index')">Home</a></li>
                        <li>Registration</li>
                    </ul>
                </div>

				@if(Session::exists('notification')) {
					@{ $notification = Session::getFlash('notification'); }
					<div class="msg@$notification[0]">
					   <p>@$notification[1]</p>
					</div>
				}

                <!-- Page Content Start -->
                <div class="full-page-text">

                    <!-- User Details -->
                    <h3>User Details</h3>
                    <form class="validation" action="@Http::url('user/register')" method="post" id="contact" enctype="multipart/form-data">
                        <table class="cellpadding4px" width="100%" border="0" cellspacing="0" cellpadding="0">
							<tr>
								<td class="width200px"><label id="displayname_label" for="displayname">Display Name *</label></td>
								<td><input type="text" size="50" id="displayname" name="displayname" class="required" value="@Request::post('displayname', '')" /></td>
							</tr>
							<tr>
                            	<td><label id="firstname_label" for="firstname">First Name *</label></td>
                            	<td><input type="text" size="50" id="firstname" name="firstname" class="required" value="@Request::post('firstname', '')" /></td>
							</tr>
							<tr>
                            	<td><label id="lastname_label" for="lastname">Last Name *</label></td>
                            	<td><input type="text" size="50" id="lastname" name="lastname" class="required" value="@Request::post('lastname', '')" /></td>
							</tr>
							<tr>
                            	<td><label id="phonenumber_label" for="phonenumber">Phone</label></td>
                            	<td><input type="text" size="50" id="phonenumber" name="phonenumber" value="@Request::post('phonenumber', '')" /></td>
							</tr>
							<tr>
                            	<td><label id="email_label" for="email">E-mail *</label></td>
                            	<td><input type="text" size="50" id="email" name="email" class="required email" value="@Request::post('email', '')" /></td>
							</tr>
							<tr>
                            	<td><label id="password_label" for="password">Password *</label></td>
                            	<td><input type="password" size="50" id="password" name="password" class="required" value="" /></td>
							</tr>
							<tr>
                            	<td><label id="password2_label" for="password2">Password Again *</label></td>
                            	<td><input type="password" size="50" id="password2" name="password2" class="required" value="" /></td>
							</tr>
							<tr>
                            	<td><label id="logofile_label" for="logofile">Logo</label></td>
                            	<td><input type="file" id="logofile" name="logofile" /></td>
							</tr>
							<tr>
                            	<td><label id="languageid_label" for="languageid">Primary Language</label></td>
                            	<td><select name="languageid">@Statics::selectboxLanguages(@Request::post('languageid', null))</select></td>
							</tr>
							<tr>
                            	<td><label id="verification_label" for="verification">Captcha *</label></td>
								<td>
									<img src="@Http::url('user/image')" alt="" /><br />
									<input type="text" size="50" id="verification" name="verification" class="required" value="" />
								</td>
							</tr>
							<tr>
                            	<td colspan="2" class="alignRight">
									<input type="submit" value="Register" id="submit_btn" name="submit" />
								</td>
							</tr>
						</table>
                    </form>
    
                </div>
                <!-- Page Content End -->
    
@Views::viewFile('{app}views/shared/footer.cshtml')